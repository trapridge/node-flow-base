{
  "name": "node-flow-base",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "start": "flow-node src/",
    "flow": "flow",
    "lint": "eslint src/",
    "mocha": "mocha -R spec -r flow-remove-types/register -r @std/esm --recursive --file test/config.js src/**/*.spec.js",
    "coverage": "nyc npm run mocha",
    "test": "npm run flow && npm run lint && npm run coverage"
  },
  "author": "@trapridge",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "chai": "^4.1.2",
    "eslint": "^4.16.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-prettier": "^2.5.0",
    "flow-bin": "^0.64.0",
    "mocha": "^5.0.0",
    "nyc": "^11.4.1",
    "prettier": "1.10.2",
    "sinon": "^4.2.2",
    "sinon-chai": "^2.14.0"
  },
  "dependencies": {
    "@std/esm": "^0.19.7",
    "colors": "^1.1.2",
    "flow-remove-types": "^1.2.3"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.spec.js"
    ],
    "reporter": ["text", "html"],
    "cache": false,
    "instrument": true,
    "source-maps": true,
    "all": true,
    "report-dir": "./coverage"
  }
}
