{
  "name": "node-flow-base",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "setup": "npm install && npm install -g flow-typed && flow-typed install && cp utils/flow-globals.js flow-typed/ && flow start",
    "build": "babel --quiet --source-maps=true src/ -d build/",
    "start": "babel-node src/",
    "start:release": "npm run build && node build/",
    "lint": "eslint src/",
    "mocha": "mocha --require=babel-register -R spec --recursive --file utils/config.js src/**/*.spec.js",
    "test": "npm run flow && npm run lint && nyc --include=src --exclude=**/*.spec.js --reporter=text --reporter=html --all npm run mocha",
    "watch:test": "npm run mocha -- --watch --reporter=progress",
    "watch:lint": "esw -w src/",
    "watch": "run-p watch:test watch:lint"
  },
  "author": "@trapridge",
  "license": "MIT",
  "engines": {
    "node": "0.9.4",
    "npm": "5.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "cp": "^0.2.0",
    "eslint": "^4.16.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-flowtype-errors": "^3.3.7",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-watch": "^3.1.3",
    "flow-bin": "^0.64.0",
    "mocha": "^5.0.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "prettier": "1.10.2",
    "sinon": "^4.2.2",
    "sinon-chai": "^2.14.0"
  }
}
