{
  "name": "node-flow-base",
  "version": "0.0.2",
  "description": "Development environment setup for Node.js development with Flow",
  "scripts": {
    "setup:flow": "npm install -g flow-typed && flow-typed install && cp utils/flow-globals.js flow-typed/ && flow stop && flow start",
    "build": "babel --quiet --source-maps=true src/ -d build/",
    "start": "babel-node src/",
    "start:release": "npm run build && node build/",
    "lint": "eslint src/",
    "mocha": "mocha --require=babel-register -R spec --recursive --file utils/test-config.js",
    "mocha:forbid": "mocha --forbid-pending --forbid-only --require=babel-register -R spec --recursive --file utils/test-config.js",
    "test": "npm run mocha -- src/**/*.spec.js",
    "test:forbid": "npm run mocha:forbid -- src/**/*.spec.js",
    "test:build": "npm run mocha -- build/**/*.spec.js",
    "coverage": "nyc --include=src --exclude=**/*.spec.js --reporter=text --reporter=html --all npm test",
    "watch:test": "npm run test -- --watch --reporter=progress",
    "watch:lint": "esw -w src/",
    "watch": "run-p watch:test watch:lint"
  },
  "author": "@trapridge",
  "license": "MIT",
  "engines": {
    "node": "0.9.4",
    "npm": "5.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "cp": "^0.2.0",
    "eslint": "^4.16.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-flowtype-errors": "^3.3.7",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-watch": "^3.1.3",
    "flow-bin": "^0.64.0",
    "husky": "^0.15.0-rc.3",
    "mocha": "^5.0.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "prettier": "1.10.2",
    "sinon": "^4.2.2",
    "sinon-chai": "^2.14.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s test:forbid lint",
      "pre-push": "run-s build test:build"
    }
  }
}
